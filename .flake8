[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov
ignore = 
    E203,
    E501,
    W503,
    F401
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
select = E,W,F,C
statistics = True
count = True
show-source = True
